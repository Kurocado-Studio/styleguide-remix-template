{
  "include": [
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "tailwind.config.ts"
  ],
  "extends": "@kurocado-studio/styleguide/tsconfig/remix",
  "compilerOptions": {
    "rootDir": "./app",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    // Vite takes care of building everything, not tsc.
    "noEmit": true
  },
  "exclude": ["node_modules", "vite.config.ts"]
}
